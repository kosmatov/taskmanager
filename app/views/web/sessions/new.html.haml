.well
  .page-header
    %h1
      = t('titles.session.new')
      %small.float-right
        = link_to t('titles.user.new'), new_user_path
  = simple_form_for(:session, :url => session_path, :html => {:class => 'form-horizontal' }) do |f|
    .row
      .span2
        %br/
      .span9
        = f.input :email
        = f.input :password
    .form-actions
      .span2
        %br/
      = f.button :submit
