.well
  .page-header
    %h1= @title
  .row
    .span4
      %br/
  = simple_form_for(@user, :html => {:class => 'form-horizontal' }) do |f|
    = render 'shared/error_messages', :object => f.object
    .row
      .span2
        %br/
      = render 'fields', :f => f
    .form-actions
      .span2
        %br/
      = f.button :submit
